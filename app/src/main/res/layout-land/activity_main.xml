<?xml version="1.0" encoding="utf-8"?><!-- ... -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            android:contentDescription="@string/logodesc"
            android:scaleType="fitCenter"
            android:src="@drawable/toonsdomain" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="0"
            android:fontFamily="monospace"
            android:padding="@dimen/small_padding"
            android:text="@string/text1land"
            android:textAlignment="center"
            android:textColor="@color/material_blue_900"
            android:textSize="@dimen/textsize_large"
            android:textStyle="bold"
            android:typeface="sans"
 />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/material_light_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="1"
            android:autoLink="map"
            android:drawableLeft="@drawable/icons8_map_marker_48"
            android:drawablePadding="@dimen/default_padding"
            android:drawableStart="@drawable/icons8_map_marker_48"
            android:gravity="center_vertical|start"
            android:text="@string/address"
            android:textAlignment="center"
            android:textColorLink="@color/material_blue_900"
            android:textSize="@dimen/textsize_large"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:autoLink="phone"
            android:drawableLeft="@drawable/icons8_phone_48"
            android:drawablePadding="16dp"
            android:drawableStart="@drawable/icons8_phone_48"
            android:gravity="center_vertical|start"
            android:text="@string/phone"
            android:textAlignment="center"
            android:textColorLink="@color/material_blue_900"
            android:textSize="26sp"
            tools:targetApi="o" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="1"
            android:autoLink="web"
            android:drawableLeft="@drawable/icons8_website_48"
            android:drawablePadding="@dimen/small_padding"
            android:drawableStart="@drawable/icons8_website_48"
            android:gravity="center_vertical|start"
            android:text="@string/website"
            android:textAlignment="center"
            android:textColorLink="@color/material_blue_900"
            android:textSize="@dimen/textsize_large"/>
    </LinearLayout>
</LinearLayout>